# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8

[*.html]
indent_style = space
indent_size = 4
quote_type = double
max_line_length = 160

[*.scss]
indent_style = space
indent_size = 4
quote_type = single

[*.js]
indent_style = space
indent_size = 2
quote_type = single